<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/la_black">

    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jiangdg.ausbc.widget.AspectRatioTextureView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true" />

        <androidx.camera.view.PreviewView
            android:id="@+id/pip_camera_view"
            android:layout_width="180dp"
            android:layout_height="101dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:implementationMode="performance"
            app:scaleType="fitCenter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_overlay_top"
            android:clickable="false"
            android:focusable="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_overlay_bottom"
            android:clickable="false"
            android:focusable="false" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_status_chip"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="@string/status_waiting_device"
        android:textColor="@color/la_text_primary"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.88"
        android:background="@drawable/bg_panel_glass"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_primary"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="@string/start_preview"
                android:textAllCaps="false"
                android:textColor="@color/la_black"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_danger"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="@string/stop_preview"
                android:textAllCaps="false"
                android:textColor="@color/la_text_primary"
                android:textSize="11sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_btn_secondary"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/enter_fullscreen"
            android:textAllCaps="false"
            android:textColor="@color/la_text_primary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_resolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/resolution_label"
            android:textColor="@color/la_text_secondary"
            android:textSize="10sp" />

        <Spinner
            android:id="@+id/spinner_resolution"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_spinner"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/bg_panel_glass" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_pip_front_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/pip_front_camera"
            android:textColor="@color/la_text_primary"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_toggle_pip_controls"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_btn_secondary"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/pip_show_controls"
            android:textAllCaps="false"
            android:textColor="@color/la_text_primary"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/pip_controls_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_pip_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/pip_size"
                android:textColor="@color/la_text_secondary"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seek_pip_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="28" />

            <TextView
                android:id="@+id/tv_pip_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pip_horizontal"
                android:textColor="@color/la_text_secondary"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seek_pip_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_pip_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pip_vertical"
                android:textColor="@color/la_text_secondary"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seek_pip_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
