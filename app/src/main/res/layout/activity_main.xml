<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jiangdg.ausbc.widget.AspectRatioTextureView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true" />

        <androidx.camera.view.PreviewView
            android:id="@+id/pip_camera_view"
            android:layout_width="180dp"
            android:layout_height="101dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:background="#66000000"
            android:visibility="gone"
            app:implementationMode="performance"
            app:scaleType="fitCenter" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#66000000"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="@string/status_waiting_device"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="12dp"
        android:background="#66000000"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/start_preview"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/stop_preview"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="@string/enter_fullscreen"
            android:textSize="12sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_pip_front_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pip_front_camera"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_toggle_pip_controls"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:text="@string/pip_show_controls"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/pip_controls_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_pip_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/pip_size"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <SeekBar
                android:id="@+id/seek_pip_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="28" />

            <TextView
                android:id="@+id/tv_pip_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pip_horizontal"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <SeekBar
                android:id="@+id/seek_pip_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_pip_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pip_vertical"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <SeekBar
                android:id="@+id/seek_pip_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
